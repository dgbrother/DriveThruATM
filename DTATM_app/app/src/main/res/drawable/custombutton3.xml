<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">

        <shape android:shape="rectangle">
            <!-- 테두리 내부 색상 설정 -->
            <solid android:color="#00FFFFFF" />
            <!-- 테두리 내부 여백 설정 -->

            <!-- 테두리 설정: 두께, 색상 -->
            <stroke
                android:width="2dp"
                android:color="#d2d2d2" />

        </shape>
    </item>

</layer-list>